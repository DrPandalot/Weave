<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" creationPolicy="all" width="100" height="80" borderColor="#54585E" borderThickness="3" borderStyle="solid">
	<mx:VBox height="100%" width="100%">
		<mx:VideoDisplay id="video" height="100%" width="100%" />
		<mx:Label id="nameLabel" height="3%" width="100%"/>
	</mx:VBox>	
	
	<mx:Script>
		<![CDATA[
			private var _labelText:String;
			
			public function set labelText(id:String):void
			{
				_labelText = id;
				invalidateProperties();
			}
			
			override protected function commitProperties():void
			{
				super.commitProperties();
				nameLabel.text = _labelText;
			}
			
			
		]]>
	</mx:Script>
	
</mx:Canvas>