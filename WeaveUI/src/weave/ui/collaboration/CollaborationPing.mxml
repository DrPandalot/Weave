<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
 xmlns:s="library://ns.adobe.com/flex/spark" 
 xmlns:mx="library://ns.adobe.com/flex/mx" 
		   width="50" height="25" toolTip="{'Connection Speed: '+ strength}">
	<s:backgroundFill>
		<s:SolidColor alpha="1"/>
	</s:backgroundFill>
	<s:HGroup width="100%" height="100%" gap="1"  verticalAlign="bottom">
		<s:Line id="bar1" width="{width/5}" height="{1*height/4}">
			<s:stroke>
				<s:SolidColorStroke id="bar1Stroke"  color="0x000000" weight="1" />
			</s:stroke>
		</s:Line>
		<s:Line id="bar2" width="{width/5}" height="{2*height/4}">
			<s:stroke>
				<s:SolidColorStroke id="bar2Stroke" color="0x000000" weight="1"/>
			</s:stroke>
		</s:Line>
		<s:Line id="bar3" width="{width/5}" height="{3*height/4}" >
			<s:stroke>
				<s:SolidColorStroke id="bar3Stroke" color="0x000000" weight="1"/>
			</s:stroke>
		</s:Line>
		<s:Line id="bar4" width="{width/5}" height="{4*height/4}"  >
			<s:stroke>
				<s:SolidColorStroke id="bar4Stroke" color="0x000000" weight="1"/>
			</s:stroke>
		</s:Line>
	</s:HGroup>
	<fx:Script>
		<![CDATA[
			
			[Bindable] private var strength:String;
			
			public function set ping(value:Number):void
			{
				if( value <= 60 ) {
					setBars(4);
					strength = "Excellent";
				} else if( value <= 120 ) {
					setBars(3);
					strength = "Good";
				} else if( value <= 180 ) {
					setBars(2);
					strength = "Fair";
				} else if( value <= 240 ) {
					setBars(1);
					strength = "Poor";
				} else {
					setBars(0);
					strength = "N/A";
				}
			}
			private function setBars(bars:Number):void
			{
				clearBars();
				var color:uint = 0;
				switch( bars )
				{
					case 4:	 color = 0x00FF00; break;
					case 3:  color = 0xFFFF00; break;
					case 2:  
					case 1:  
					default: color = 0xFF0000; break;
				}
				switch( bars )
				{
					case 4:	bar4Stroke.alpha = 1; bar4Stroke.color = color;
					case 3: bar3Stroke.alpha = 1; bar3Stroke.color = color;
					case 2: bar2Stroke.alpha = 1; bar2Stroke.color = color;
					case 1: bar1Stroke.alpha = 1; bar1Stroke.color = color; break;
					default: 
					{
						bar4Stroke.color = color; bar4Stroke.alpha = 1;
						bar3Stroke.color = color; bar3Stroke.alpha = 1;
						bar2Stroke.color = color; bar2Stroke.alpha = 1;
						bar1Stroke.color = color; bar1Stroke.alpha = 1;
						break;
					}
				}
			}
			private function clearBars():void
			{
				bar4Stroke.alpha = 0;
				bar3Stroke.alpha = 0;
				bar2Stroke.alpha = 0;
				bar1Stroke.alpha = 0;
			}
		]]>
	</fx:Script>
</s:BorderContainer>
