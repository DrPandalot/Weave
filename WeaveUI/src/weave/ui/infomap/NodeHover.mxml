<?xml version="1.0" encoding="utf-8"?>
<infomap:HoverComponent xmlns:mx="http://www.adobe.com/2006/mxml"
						xmlns:infomap="weave.ui.infomap.*" >
	<mx:Script >
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			[Bindable] public var nodeDescriptionText:String;
			[Bindable] public var nodeTitleText:String;
			[Bindable] public var nodeFullStoryHtmlText:String;
			[Bindable] public var nodeTimeStampText:String;
			
		]]>
	</mx:Script>
	<mx:VBox width="100%" height="100%" verticalScrollPolicy="off" horizontalScrollPolicy="off" paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5">
		<mx:Text id="nodeTitle" color="0xff0000" fontWeight="bold" width="100%" height="10%" text="{nodeTitleText}"/>
		<mx:HRule width="100%"/>
		<mx:HBox width="100%" height="70%" verticalScrollPolicy="off" horizontalScrollPolicy="off">
			<mx:Image id="nodeThumbnail" width="40%" height="100%" maintainAspectRatio="false" />
			<mx:VRule height="100%"/>
			<mx:VBox verticalScrollPolicy="auto" width="60%" height="100%">
				<mx:Text id="nodeDescription" width="100%" height="100%" text="{nodeDescriptionText}"/>
			</mx:VBox>
			
		</mx:HBox>
		
		<mx:HRule width="100%"/>
		<!--<mx:Text id="nodeFullStory" color="0x00ff00" fontWeight="bold" width="100%" height="5%" htmlText="{nodeFullStoryHtmlText}" />-->
		<mx:Text id="nodeTimeStamp" color="0x00ff00" fontWeight="bold" width="100%" height="5%" text="{nodeTimeStampText}" />
		
	</mx:VBox>
	
</infomap:HoverComponent>
