<!---
	This is a component for setting legend attributes such as number of columns, item reversal, 
	labeling and title functions.

	@author kmonico
-->

<mx:VBox xmlns="weave.ui.*"
		 xmlns:mx="http://www.adobe.com/2006/mxml"
		 creationPolicy="all" clipContent="false"
		 horizontalScrollPolicy="off" verticalScrollPolicy="off"
		 label="Legend settings">
	
	<mx:CheckBox id="ascendingOrderCheck" label="Ascending item order"/>
	<mx:HBox id="columnsBox">
		<mx:Label text="Number of columns"/>
		<mx:NumericStepper id="numColumns" minimum="1"/>
	</mx:HBox>


	<mx:CheckBox id="chkShowLegendAttrName"
				 label="Show legend attribute name"/>
	<mx:HBox enabled="{chkShowLegendAttrName.selected}" 
			 visible="{chkShowLegendAttrName.selected}">
		<TextBox id="txtLegendAttrNameFunc"
				 label="Title label function:"/>
	</mx:HBox>
	
	<TextBox id="txtLegendValuesFunction"
			 label="Item label function:"/>
</mx:VBox>
