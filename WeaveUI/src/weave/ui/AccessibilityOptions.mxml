<ControlPanel xmlns="weave.ui.*"
			  xmlns:mx="http://www.adobe.com/2006/mxml"
			  xmlns:LinkableObjectList="weave.ui.LinkableObjectList.*"
			  width="400" height="400" backgroundColor="#EFF4BC" horizontalScrollPolicy="off"
			  implements="weave.api.core.ILinkableObject"
			  title="Accessibility Options" verticalScrollPolicy="off">
	<mx:HDividedBox id="accessibilityOptions" width="100%" height="100%">
		<mx:TabNavigator width="100%" height="100%" borderStyle="inset">
			<mx:HBox width="100%" height="100%" label="Alt Text" horizontalAlign="left"
					 verticalAlign="top">
				<mx:VBox width="100%" height="100%" horizontalAlign="left">
					<mx:Label text="Short Description:"/>
					<mx:TextArea id="generalDescriptionTextArea" width="100%" height="20%"
								 editable="true" 
								 creationComplete="linkBindableProperty(generalDescription, event.target, 'text')"
								 toolTip="Short description for the dashboard."/>
					<mx:List id="VisCheckboxes" width="100%" height="100%">
						<mx:itemRenderer>
							<mx:Component>
								<mx:CheckBox
									change="outerDocument.updateAltText()">
									<mx:Script>
										<![CDATA[
											import weave.api.linkBindableProperty;
											import weave.api.unlinkBindableProperty;
											import weave.visualization.tools.SimpleVisTool;
											
											private function get tool():SimpleVisTool
											{
												return data as SimpleVisTool;
											}
											
											override public function set data(value:Object):void
											{
												if (tool)
													unlinkBindableProperty(tool.altTextEditor.includeInDesc, this, 'selected');
												super.data = value;
												if (tool)
													linkBindableProperty(tool.altTextEditor.includeInDesc, this, 'selected');
												this.label = WeaveAPI.globalHashMap.getName(tool);
											}
										]]>
									</mx:Script>
								</mx:CheckBox>
							</mx:Component>
						</mx:itemRenderer>
					</mx:List>
				</mx:VBox>
				<mx:VBox width="100%" height="100%" horizontalAlign="left">
					<mx:Label text="Complete Alt Text:"/>
					<mx:TextArea id="AltTextTextArea" width="100%" height="100%"
								 backgroundColor="#EEEEEE" editable="false" 
								 creationComplete="linkBindableProperty(altText, event.target, 'text')"
								 toolTip="This is the text that will be available for accessibility."/>
				</mx:VBox>
			</mx:HBox>
			
			<mx:Script>
				<![CDATA[
					import weave.api.ui.IAltText;
					import flash.external.ExternalInterface;
					
					import mx.accessibility.CheckBoxAccImpl;
					import mx.controls.CheckBox;
					import mx.controls.ComboBox;
					import mx.controls.List;
					import mx.controls.Menu;
					import mx.controls.TextArea;
					import mx.controls.TextInput;
					import mx.core.IUIComponent;
					import mx.events.DragEvent;
					import mx.events.FlexEvent;
					import mx.managers.DragManager;
					
					import weave.Weave;
					import weave.api.core.IDisposableObject;
					import weave.api.core.ILinkableObject;
					import weave.api.detectLinkableObjectChange;
					import weave.api.linkBindableProperty;
					import weave.api.linkSessionState;
					import weave.api.newDisposableChild;
					import weave.api.newLinkableChild;
					import weave.api.registerLinkableChild;
					import weave.api.reportError;
					import weave.api.ui.ILinkableObjectEditor;
					import weave.core.LinkableBoolean;
					import weave.core.LinkableHashMap;
					import weave.core.LinkableString;
					import weave.core.SessionManager;
					import weave.editors.AltTextEditor;
					import weave.ui.ControlPanel;
					import weave.ui.SessionStateEditor;
					import weave.visualization.tools.SimpleVisTool;							
					
					public const generalDescription:LinkableString = registerLinkableChild(this, new LinkableString("Weave visualization"));
					public const altText:LinkableString = registerLinkableChild(this, new LinkableString());
					
					private const padding:int = 10;
					private var _visTools:Array = null;	
				
					override protected function inConstructor():void
					{
						super.inConstructor();
						WeaveAPI.globalHashMap.childListCallbacks.addGroupedCallback(this, setVisTools, true);
						panelWidth.value = "70%";
						panelHeight.value = "70%";
						panelX.value = "15%";
						panelY.value = "15%";
						
					}
				
					override protected function childrenCreated():void
					{
						super.childrenCreated();
						generalDescription.addImmediateCallback(this, updateAltText);
						altText.addImmediateCallback(this, updateAltText);
					}
				
					private function setVisTools() : void
					{
						VisCheckboxes.dataProvider = _visTools = WeaveAPI.globalHashMap.getObjects(IAltText);
					}
					
					public function updateAltText():void
					{
						altText.value = generalDescription.value + "\n";
						
						for each (var visTool:SimpleVisTool in _visTools)
							if (visTool.altTextEditor.includeInDesc.value)
								altText.value += visTool.altTextEditor.toolDescription.value  + "\n";
							
						ExternalInterface.call("function(altText) { " +
							"var weaveAltImg = document.getElementById(\"weaveAltImg\"); " +
							"if(weaveAltImg) " +
							"weaveAltImg.alt = altText;" +
							"}",
							altText.value
						);
					}
				]]>
			</mx:Script>	
		</mx:TabNavigator>
	</mx:HDividedBox>
</ControlPanel>