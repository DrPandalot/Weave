				</s:VGroup>
				
			</ui:Indent>
		</s:VGroup>
	
		<s:VGroup >
			<ui:Indent label="Class Column">
				<mx:ComboBox>
					<mx:ArrayCollection>
						<fx:String>Positive Influences only</fx:String>
						<fx:String>Negative Influences only</fx:String>
						<fx:String>Both influences</fx:String>
					</mx:ArrayCollection>
				</mx:ComboBox>
			</ui:Indent>
			
			<s:CheckBox label="Limit Number of Columns Assigned"/>
			<s:HGroup>
				<s:Label text= "Columns per class"/>
				<s:TextInput id="columninClassTI"/>
			</s:HGroup>
			
			<s:Spacer height="20"/>
			
			<s:CheckBox id="tInTableCB" label="Show t-statistic in table"/>
			<s:CheckBox  id="pInTableCB" label="Show p values in table"/>
			
			<s:Spacer height="20"/>
			<s:Label text="Display with Axis Names"/>
			<ui:Indent>
				<s:CheckBox id="tInRadvizCB" label="t-statistic"/>
				<s:CheckBox id="pInRadvizCB" label="p-value"/>	
				
			</ui:Indent>
			
			
		</s:VGroup>
		</s:HGroup>
	</s:NavigatorContent>
		
	
