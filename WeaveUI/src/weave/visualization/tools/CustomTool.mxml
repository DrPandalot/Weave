<SimpleVisTool xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:settings="weave.ui.settings.*"
			   xmlns:ui="weave.ui.*"
			   xmlns="weave.visualization.tools.*" 
			   xmlns:userControls="weave.ui.userControls.*"
			   title="Custom Tool"
			   layout="{new BasicLayout()}">
	<fx:Script>
		<![CDATA[
			import spark.layouts.BasicLayout;
			
			import weave.api.WeaveAPI;
			import weave.api.ui.IVisTool;
			
			WeaveAPI.registerImplementation(IVisTool, CustomTool, "Custom Tool");
			
			override protected function constructor():void
			{
				super.constructor();
				
				panelTitle.value = "Custom Tool";
			}
		]]>
	</fx:Script>
	<ui:ControlPanel>
		
	</ui:ControlPanel>
</SimpleVisTool>
