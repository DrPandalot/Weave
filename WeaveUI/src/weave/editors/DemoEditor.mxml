<ui:DraggablePanel xmlns:mx="http://www.adobe.com/2006/mxml"
			xmlns="weave.editors.*"
			xmlns:ui="weave.ui.*"
			implements="weave.api.ui.IVisTool"
			backgroundColor="#c0c0c0"
			title="Demo"
			>
	<mx:VBox initialize="UIUtils.pad(event, 5);" verticalGap="2">
		<ui:CustomCheckBox label="Enable mouseover" width="100%" creationComplete="linkBindableProperty(Weave.properties.enableToolProbe, event.target, 'selected')"/>
		<ui:CustomCheckBox label="Lock geometry" width="100%" creationComplete="link(Demo.settings.lock_geomFiltering, event.target, 'selected')"/>
		<ui:CustomCheckBox label="Lock tiles" width="100%" creationComplete="link(Demo.settings.lock_tileFiltering, event.target, 'selected')"/>
		<mx:HBox horizontalGap="2" verticalAlign="middle">
			<ui:CustomCheckBox label="Filter tiles" width="100%" creationComplete="link(Demo.settings.filterWithinImportanceRange, event.target, 'selected')"/>
			<ui:TextInputWithPrompt prompt="ID" id="singleTile" width="38" creationComplete="link(Demo.settings.show_singleTileID, event.target, 'text')"/>
			<mx:Button visible="{!!singleTile.text}" icon="@Embed(source='/weave/resources/images/x-inset.png')" width="24" click="singleTile.text = '';"/>
		</mx:HBox>
		<ui:ColorEditor label="Border" creationComplete="event.target.link(Demo.settings.show_border, Demo.settings.color_border, Demo.settings.alpha_border)"/>
		<ui:ColorEditor label="Content" creationComplete="event.target.link(Demo.settings.show_content, Demo.settings.color_content, Demo.settings.alpha_content)"/>
		<ui:ColorEditor label="Overlap" creationComplete="event.target.link(Demo.settings.show_overlap, Demo.settings.color_overlap, Demo.settings.alpha_overlap)"/>
		<ui:ColorEditor label="Locked area" creationComplete="event.target.link(null, Demo.settings.color_locked, null)"/>
		<ui:CustomCheckBox label="Show all query borders" width="100%" creationComplete="linkBindableProperty(Demo.settings.show_rectangles, event.target, 'selected')"/>
	</mx:VBox>
	
	<mx:Script>
		<![CDATA[
			import weave.Weave;
			import weave.api.WeaveAPI;
			import weave.api.linkBindableProperty;
			import weave.api.ui.IVisTool;
			import weave.core.UIUtils;
			
			WeaveAPI.registerImplementation(IVisTool, DemoEditor, " Demo Editor");
			
			override public function reposition():void
			{
				panelWidth.value = "12%";
				panelHeight.value = "39%";
			}
			
			override protected function constructor():void
			{
				super.constructor();
				zOrder.value = 1;
			}
			
			private function link(v:*, h:*, p:*, d:*=0):void { linkBindableProperty(v, h, p, d); }

			override protected function childrenCreated():void
			{
				super.childrenCreated();
				
			}
		]]>
	</mx:Script>
</ui:DraggablePanel>
